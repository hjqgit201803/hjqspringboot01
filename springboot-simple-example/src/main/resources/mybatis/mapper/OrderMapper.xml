<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hjq.springboot.springbootsimpleexample.dao.OrderMapper">
    <!--开启二级缓存-->
    <!--<cache/>-->

    <resultMap id="BaseOrderMap" type="com.hjq.springboot.springbootsimpleexample.model.OrderInfo">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="orderNo" column="orderNo" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="BIGINT"/>
        <result property="orderAmount" column="order_amount" jdbcType="FLOAT"/>
        <collection property="itemList" ofType="com.hjq.springboot.springbootsimpleexample.model.OrderItem"
                    javaType="java.util.ArrayList">
            <id column="id" property="id" jdbcType="BIGINT"/>
            <result column="orderId" property="orderId" jdbcType="BIGINT"/>
            <result column="goodsId" property="goodsId" jdbcType="BIGINT"/>
            <result column="order_goods_num" property="orderGoodsNum" jdbcType="INTEGER"/>
        </collection>
    </resultMap>

    <insert id="insertOrder" useGeneratedKeys="true">
        insert into orderinfo(orderNo,creatTime)
        valus(#{orderinfo.orderNo},#{orderinfo.createTime})
    </insert>

    <select id="listOrder" resultMap="BaseOrderMap">
       select
       ol.id,
       ol.orderNo,
       ol.order_amount,
       oi.id,
       oi.orderId,
       oi.goodsId,
       oi.order_goods_num
       from orderinfo ol left join order_item oi on ol.id=oi.orderId
    </select>


</mapper>